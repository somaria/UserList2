<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/photo_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"
            android:src="@drawable/ic_beenhere_black_24dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <TextView
            android:id="@+id/firstName"
            android:layout_width="112dp"
            android:layout_height="69dp"
            android:textSize="18sp"
            android:padding="8dp"
            tools:text="Daniel"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@+id/photo_id"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.182" app:layout_constraintStart_toEndOf="@+id/photo_id"
            app:layout_constraintBottom_toTopOf="@+id/lastName"
            app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
            android:id="@+id/lastName"
            android:textColor="#000"
            app:layout_constraintLeft_toRightOf="@+id/photo_id"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            tools:text="Malone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/firstName"
            app:layout_constraintStart_toStartOf="@+id/firstName"/>

</android.support.constraint.ConstraintLayout>